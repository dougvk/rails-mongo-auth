<h1>Editing Your Company</h1>

<%= form_for(@user) do |f| %>
	<%= render 'shared/error_messages', :object => f.object %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :url, "Company Website" %><br />
    <%= f.text_field :url %>
  </div>
  <div class="actions">
    <%= f.submit "Update your Company" %>
  </div>
<% end %>
